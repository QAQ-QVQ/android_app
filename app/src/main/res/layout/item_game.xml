<?xml version="1.0" encoding="utf-8"?>
<com.hjy.baseui.ui.view.linearlayout.SuperLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:zqy_sll_backgroundColor="@android:color/white"
    app:zqy_sll_clickAlpha="1.0"
    app:zqy_sll_clickColorBg="@color/bui_gray"
    app:zqy_sll_radius="0"
    android:padding="12dp">

    <com.xuexiang.xui.widget.imageview.RadiusImageView
        android:id="@+id/riv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:riv_corner_radius="5dp" />
    <!---->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_TitleGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textColor="@color/bui_black_light1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="xx:xxxx"
            android:textColor="@color/bui_black_light"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>

</com.hjy.baseui.ui.view.linearlayout.SuperLinearLayout>