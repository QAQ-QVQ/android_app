<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bui_background_light"
    tools:context=".activity.mine.ActivityEditText">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/bui_bar_black_white"></include>

        <TextView
            android:id="@+id/tv_text_submit_bar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/bui_black_light1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <com.xuexiang.xui.widget.edittext.MultiLineEditText
        android:id="@+id/mine_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mine_margin"
        android:background="@color/bui_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0"
        app:mlet_contentPadding="@dimen/mine_margin"
        app:mlet_contentTextColor="@color/bui_black_light1"
        app:mlet_contentTextSize="16sp"
        app:mlet_hintTextColor="@color/bui_black_light2"></com.xuexiang.xui.widget.edittext.MultiLineEditText>
</android.support.constraint.ConstraintLayout>